@model IEnumerable<MAFS_ReStart.Models.FundingAgency>

@{
    ViewBag.Title = "Funders";
}

<div class="main">
    <div class="container">
        <section class="hgroup">
            <h1>@ViewBag.Title</h1>
            <h2>
                To provide comprehensive & integrated Social Services to the Immigrant population of India, Pakistan, Bangladesh, the Middle East & European countries. These services include but are not limited to <strong>
                    educate, counsel, assist & empower
                    individuals & families
                </strong> to become productive members in their new home.
            </h2>
            <ul class="breadcrumb pull-right">
                <li><a href="/">Home</a> </li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </section>

    <br />

        @foreach (var funder in Model)
        {
            <div class="service_teaser">
                <div class="row">
                    <div class="service_photo col-sm-4 col-md-4">
                        <a href="@funder.URL" target="_blank"><img src="~/@funder.ImageURL" width="250" /></a>
                        @*<figure style="background-image:url(../@funder.ImageURL)"></figure>*@
                    </div>
                    <div class="service_details col-sm-8 col-md-8">
                        <h2 class="section_header"><b>@funder.Name</b><small> <a href="@funder.URL" target="_blank">@funder.URL</a></small></h2>
                        <p>@funder.ShortBio </p>
                    </div>
                </div>
            </div>
            <hr />
        }




    </div> @*end div*@
