@{
    ViewBag.Title = "Contact";
}

<div class="full_page_photo">
<iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=7541+N+Western+Ave,+Chicago,+IL&amp;aq=0&amp;oq=75&amp;sll=39.739318,-89.266507&amp;sspn=14.432057,33.815918&amp;ie=UTF8&amp;hq=&amp;hnear=7541+N+Western+Ave,+Chicago,+Cook,+Illinois+60645&amp;t=m&amp;z=14&amp;iwloc=A&amp;ll=42.018635,-87.690014&amp;output=embed"></iframe>
</div>
<div class="main">
     <div class="container">
          <section class="hgroup">
               <h1>Contact us</h1>
               <h2>We would love to hear from you. Send us your comments, suggestions, ideas, random thoughts, or complaints. Any feedback from you helps make our service better.</h2>
               <ul class="breadcrumb pull-right">
                    <li><a href="index.html">Home</a> </li>
                    <li class="active">Contact</li>
               </ul>
          </section>
          <section>
               <div class="row">
                    <div class="office_address col-sm-4 col-md-4">
                         <div class="team_member">
                         	<img src="~/images/favicon.png" width="90" height="90" alt="logo">
                         	<h5>MAFS</h5>
                              <small>family | advocacy | service | support</small><br><br>
                              <div class="team_social"> <a href="https://www.facebook.com"><i class="fa fa-facebook"></i></a> <a href="https://twitter.com/leonartgr"><i class="fa fa-twitter"></i></a> <a href="#pinterest"><i class="fa fa-linkedin"></i></a> <a href="https://github.com/PlethoraThemes"><i class="fa fa-github-alt"></i></a> </div>
                              <address>
                              <strong></strong><br>
                              7541 N Western Ave<br>
                              Chicago, IL 60645<br>
                              <abbr title="Phone">P:</abbr> (773) 465-3105
                              </address>
                              <address>
                              <abbr title="Email">E:</abbr> <a href="mailto:support@mafsinc.com">support@mafsinc.com</a>
                              </address>
                         </div>
                    </div>
                    <div class="contact_form col-sm-8 col-md-8">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            if(Html.ValidationMessage("Name") != null)
                            {
                                <div class="alert alert-danger fade in">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <h4 class="alert-heading">Oh snap! You got an error!</h4>
                                    <p>@Html.ValidationSummary()</p>
                                </div>
                            }
                                    
                              <div class="row">
                                   <div class="col-sm-6 col-md-6">
                                        <label>Name</label>
                                        <input name="Name" id="Name" class="form-control" type="text" value="@Request["Name"]">
                                   </div>
                                   <div class="col-sm-6 col-md-6">
                                        <label>E-mail</label>
                                        <input name="email" id="email" class="form-control" type="text" value="">
                                   </div>
                              </div>
                              <div class="row">
                                   <div class="col-sm-12 col-md-12">
                                        <label>Subject</label>
                                        <input name="subject" id="subject" class="form-control" type="text">
                                   </div>
                              </div>
                              <div class="row">
                                   <div class="col-sm-12 col-md-12">
                                        <label>Message</label>
                                        <textarea name="message" id="message" rows="8" class="form-control"></textarea>
                                   </div>
                                   <div class="col-sm-12 col-md-12"><br/>
                                        <input type="submit" class="btn btn-primary" name="submit" value="Submit Message"> <span id="notice" class="alert alert-warning alert-dismissable hidden" style="margin-left:20px;"></span> </div>
                              </div>
                         }
                    </div>
               </div>
          </section>
     </div>