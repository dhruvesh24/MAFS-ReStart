    <div class="col-sm-3 col-md-3">
        <section class="hgroup centered">

            <img src="~/Images/icons/@program.Icon" width="55%" />
            @if (program.Title.Equals("Nutrition"))
            {
                <h2 class="section_header fancy centered">@program.Title.Replace("-"," ") <br />Program<small></small></h2>
            }
            else
            {
                <h2 class="section_header fancy centered">@program.Title.Replace("-"," ") Program<small></small></h2>
            }
            
            <br />
            <p class="centered">
                @{
                    string CompleteDescription = program.ShortDescription + program.Description;
                }
                @if (CompleteDescription.Count() <= 200)
                {
                   <p class="centered"> @Html.Raw(CompleteDescription)</p>
                }
                else
                {
                       <p class="centered"> @(Html.Raw(CompleteDescription.Substring(0, 200)) + dots) </p>
                }
                   
            
            <a class="btn btn-success" href="~/Program/@program.Title.Replace("-"," ")"><i class="fa fa-info"></i>&nbsp; Learn More  &raquo;</a>
        </section>
    </div>
}