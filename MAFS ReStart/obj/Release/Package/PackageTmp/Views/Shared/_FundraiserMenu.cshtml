@model IEnumerable<MAFS_ReStart.Models.Fundraiser>
<li class="dropdown">
    <a data-toggle="dropdown" class="dropdown-toggle" href="#">Fundraisers<span class="caret"></span></a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink("Overview", "Index", "Fundraiser")</li>
        @foreach (var fundraiser in Model)
        {
            if (!fundraiser.IsMini){
               <li>@Html.ActionLink(fundraiser.Date.Year + " Annual", "Details", "Fundraiser", new { id = fundraiser.Id }, null)</li> 
            }
            else
            {
                <li>@Html.ActionLink(fundraiser.Date.Year + " Mini", "Details", "Fundraiser", new { id = fundraiser.Id }, null)</li> 
            }
            
        }

